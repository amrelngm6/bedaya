{% include 'views/front/includes/header.html.twig' %}
    
    <div class="w-full py-2 cyan-bg relative mb-10 ">
        <div class="w-full overflow-hidden h-full cyan-bg absolute top-0 left-0">        
            <img src="/uploads/img/light-network.webp" class="absolute left-0 top-0 w-full" style="opacity: .3;" />
            <img src="/uploads/img/circles-bg.webp" class="absolute left-0 bottom-0 w-full" style="opacity: .3;" />
        </div>
        <div class="container mx-auto relative">
            <h1 class="text-2xl lg:pb-10  mx-auto w-72 text-center font-bold purple-color" >{{item.content.title}}</h1>
            <div class="mx-auto w-full relative z-10 mb-8">
                <div class="relative top-0  left-0 right-0 px-1 pt-2 pb-6  " >
                    <div class="lg:flex block w-full  gap-3 gap">
                        <div class="overflow-auto lg:w-8/12 w-full mb-32  bg-white border-1 border border-gray-100 rounded-lg lg:p-10 p-2">
         

                            <div id="brief"  class="relative my-6 p-6 lightcyan-bg  rounded-lg overflow-hidden">
                                <img src="/uploads/img/light-network.webp" class="absolute left-0 top-0 w-full" style="opacity: .3;" />
                                <div class="relative">
                                    <span class="block w-full text-lg font-bold pb-2 purple-color">{{lang.__('summary')}}</span>
                                    <hr class="border-gray-400 my-4" />
                                    {{item.content.short | raw}}
                                </div>
                            </div>

                            <img src="{{item.picture}}" alt="Doctor" class="w-full" />

                            <div id="brief"  class="relative my-6 p-6 lightcyan-bg  rounded-lg overflow-hidden">
                                <img src="/uploads/img/light-network.webp" class="absolute left-0 top-0 w-full" style="opacity: .3;" />
                                <div class="relative">
                                    <span class="block w-full text-lg font-bold pb-2 purple-color">{{lang.__('Basic Details')}}</span>
                                    <hr class="border-gray-400 my-4" />
                                    
                                    
                                    {{item.content.content | raw}}

                                </div>
                            </div>

                        </div>
                        <div class="w-full lg:w-4/12">
                            <div class="relative border-1 border border-gray-100 text-center bg-white rounded-lg pt-36 pb-6">
                                <img src="{{item.picture}}" style="top:-100px" class="rounded-full p-1 border-purple-800 border-1 w-56 h-56 mx-auto left-0 right-0 absolute" alt="Doctor" />

                                <h2 class="text-xl pb-2 font-bold purple-color" >{{item.content.title}}</h2>
                                <p class="text-lg pb-10 font-bold cyan-color" >{{ lang.__('lang') == 'en' ? item.field.short_name_en : item.field.short_name_ar}}</p>
                                <a class="mx-auto py-3 px-4 cyan-bg purple-color rounded-lg  inline-block font-semibold " href="#!">حجز موعد </a>
                            </div>

                            {% if offers %}
                            <div class="cyan-gradient45 rounded-lg py-2 mt-10 pl-40 pr-6 purple-color font-semibold text-lg  " >
                                عروض  مميزة
                            </div>
                            {% endif %}
                            {% for offer in offers %}
                            <div class="relative border-1 border border-gray-100  bg-white rounded-tl-2xl rounded-br-2xl p-6 pb-6 my-6">
                                <a href="#!" class="text-xl font-semibold py-2 mb-2 block">{{offer.content.title}}</a>
                                <div>
                                    {{offer.content.content | raw}}
                                </div>

                                <div class="w-full text-center ">
                                    <a class="mx-auto my-2 py-3 px-4 cyan-bg purple-color rounded-lg  inline-block font-semibold  " href="/offers/{{offer.id}}">{{lang.__('more_details')}}</a>
                                </div>

                            </div>
                            {% endfor %}


                            <div class="cyan-gradient45 rounded-lg py-2 mt-10 pl-40 pr-6 purple-color font-semibold text-lg  " >
                                <a href="/doctors">{{lang.__('VIEW_ALL_DOCTORS')}}</a>
                            </div>
                            {% for doctor in similar %}
                            <div class="relative border-1 border border-gray-100 text-center bg-white rounded-lg mt-20 pt-20 pb-6">
                                <img src="{{doctor.picture}}" width="150" height="150" style="top:-60px" class="rounded-full p-1 border-purple-800 border-1 w-32 mx-auto left-0 right-0 absolute" alt="Doctor" />

                                <h2 class="text-lg pb-2 font-bold purple-color" >{{doctor.content.title}}</h2>
                                <p class="text-base pb-10 font-bold cyan-color" >{{doctor.field.short_name_ar}}</p>
                                <div class=" w-full text-center gap-6">
                                    <a class="mx-auto py-3 px-4 purple-bg text-white rounded-lg  inline-block " href="/{{doctor.content.prefix}}">السيرة الذاتية </a>
                                    <a class="mx-auto py-3 px-4 cyan-bg purple-color font-semibold rounded-lg  inline-block " href="/booking">{{lang.__('BOOK_NOW')}} </a>
                                </div>
                            </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


