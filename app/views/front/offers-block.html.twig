<div class="w-full" style=" display:table">
            {% for item in offers %}

            <div style="vertical-align:top;" class="px-2 inline-block list-icon mb-20 relative bg-white lg:w-1/2">
                <div class="w-full  p-7 pt-10 lg:flex">
                    <div class="w-full py-2">
                        <h2 class="flex mb-2 text-2xl font-semibold purple-color pb-4 gap gap-3"><img width="50" height="50" src="/stream?image=/uploads/img/{{item.field.icon ? item.field.icon : 'logo.webp'}}" /> {{item.content.title}}</h2>
                   </div>
                </div>
                <div class=" text-white w-full cyan-bg rounded-xl p-6 ">
                    
                    <a href="/offer_booking/{{item.id}}" class="pull-{{lang.__('lang') == 'ar' ? 'left' : 'right'}} relative z-10 hover:bg-gray-800 purple-bg py-3 px-4 rounded-lg text-white">{{lang.__('more_details')}}</a>

                    {{item.content.content|raw}}

                </div>
            </div>

            {% endfor %}
</div>

