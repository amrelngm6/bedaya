{% include 'views/front/includes/header.html.twig' %}

<div class="w-full cyan-bg pb-6 pt-2 relative ">
    <div class="w-full overflow-hidden h-full absolute bottom-0 left-0">        
        <img  alt="{{app.settings['sitename']}}" src="./img/light-network.webp" class="absolute left-0 top-0 w-full" style="opacity: .3;" />
    </div>
    <div class="container mx-auto relative">
        <h1 class="text-2xl mx-auto w-auto text-center font-bold purple-color" >{{lang.__('BOOKING_PAGE')}}</h1>
    </div>
</div>

<div class="bg-gray-100 relative">
    <img alt="{{app.Settings['sitename']}}" src="./img/light-network.webp" class="absolute left-0  w-full " style="top:100px; opacity: .3;" />

    <form action="/submit/booking" id="booking-form" class="max-w-xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="bg-white overflow-hidden sm:rounded-lg relative ">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    {{lang.__('BOOKINGS')}}
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    {{lang.__('contact info')}}
                </p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
                <dl class="sm:divide-y sm:divide-gray-200">
                    <div class="sm:flex sm:items-center sm:justify-between sm:py-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            <p>{{lang.__('Name')}}</p>
                            <input required class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-first-name" type="text" placeholder="{{lang.__('name')}}">
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 ">
                            <p>{{lang.__('Mobile')}}</p>
                            <input required maxlength="11" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-first-name" type="text" placeholder="{{lang.__('mobile')}}">
                        </dd>
                    </div>
                    <div class="sm:flex sm:items-center sm:justify-between sm:py-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            <p>{{lang.__('Email')}}</p>
                            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-first-name" type="text" placeholder="{{lang.__('Email')}}">
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 ">
                            <p>{{lang.__('Specialization')}}</p>
                            <select class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                                <option value="1">1</option>
                                <option value="1">1</option>
                            </select>
                        </dd>
                    </div>
                    <div class="sm:items-center sm:justify-between sm:py-4 sm:px-6 ">
                        <div class="block w-full ">
                            <input data-target="notes" class="switch-view cursor-pointer p-2" type="checkbox" name="" /> {{lang.__('I Have notes')}}
                        </div>
                        <ul class="w-full hidden pt-4" id="notes">
                            <li>
                                <textarea class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 "></textarea>
                            </li>
                        </ul>
                    </div>
                </dl>
            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    {{lang.__('Book Now')}}
                </button>
            </div>
        </div>
    </form>
</div>
{% include 'views/front/includes/footer.html.twig' %}